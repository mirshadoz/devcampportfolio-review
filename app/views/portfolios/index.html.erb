<p id="notice"><%= notice %></p>

<h1>Portfolio Items</h1>

<%= link_to "Create new Item", new_portfolio_path %>

<% @portfolio_items.each do |item| %>
  <h3><%= link_to item.title, portfolio_show_path(item) %></h3>
  <p><%= item.subtitle  %></p>
  <p><%= item.body  %></p>
  <%= image_tag item.thumb_image unless item.thumb_image.nil? %></p>
  <%= link_to "Edit", edit_portfolio_path(item) %>
  <td><%= link_to 'Destroy', portfolio_path(item), method: :delete, data: { confirm: 'Are you sure?' } %></td>
  <hr>
<% end %>